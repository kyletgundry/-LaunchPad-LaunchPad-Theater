<h1>Welcome to LaunchPad Theater!</h1>

<div style="float: left; padding-right: 50px;"><a href="/movies/new" class="btn btn-default">Add Movie</a></div>
<div><a href="/theaters/new" class="btn btn-default">Add Theater</a></div>

<br>
<div class="row">
  <% @movies.each do |movie| %>
    <div class="col-md-4">
      <div class="well">
        <div><h3><a href="/movies/<%= movie.id %>"><%= movie.name %></a></h3></div>
        <div><h5>Theater: <%= movie.theater.name %></h5></div>
        <% movie.showtimes.each do |showtime| %>
          <h5>Showtime: <%= showtime.date %>  <%= showtime.time %></h5>
        <% end %>
        <div style="float: left; padding-right: 10px;"><a href="/showtimes/new" class="btn btn-default">Add Showtime</a></div>
        <%= form_tag "/movies/#{movie.id}", method: :delete do %>
          <div>
          <input type="submit" value="Remove Movie" class="btn btn-default">
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>


<h1>Create New Movie:</h1>

<div><a href="/movies" class="btn btn-default">Cancel</a></div>
<br>

<%= form_tag "/movies", method: :post do %>
  <div>
    <label for="name">Name:</label>
    <input type="text" name="name">
  </div>
  <br>
  <div>
    <label style="padding-right: 10px;">Theaters: </label>
      <select name="theater_name">
       <% @theaters.each do |theater| %>
         <option><%= theater.name %></option>
       <% end %>
     </select>
  </div>
  <br>
  <div>
    <input type="submit" value="Add Movie">
  </div>
<% end %>
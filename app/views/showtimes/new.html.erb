<h1>Create New Showtime:</h1>

<a href="/showtimes" class="btn btn-default">Cancel</a>


<%= form_tag "/showtimes", method: :post do %>
  <div>
    <label for="theater_id">Theater:</label>
    <input type="text" name="theater_id">
  </div>  
  <div>
    <label for="movie_id">Movie:</label>
    <input type="text" name="movie_id">
  </div>
  <div>
    <label for="date">Date:</label>
    <input type="date" name="date">
  </div>
  <div>
    <label for="time">Time:</label>
    <input type="time" name="time">
  </div>
  <div>
    <input type="submit" value="Add Showtime">
  </div>
<% end %>